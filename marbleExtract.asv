%test
sawdust_path = 'Kfolder/total/sawdust/';
marble_path = 'Kfolder/total/marble';
out_path = 'Kfolder/total/labels/';
files = dir(strcat('*.png'));
for file = files'
    image = imread(file.name);
    image = imbinarize(image,0.5);
    CC = bwconncomp(image);
    numPixels = cellfun(@numel,CC.PixelIdxList);
    [biggest,idx] = max(numPixels);
    image(CC.PixelIdxList{idx}) = 0;
    image = ~image;
    %imshow(image);
    imwrite(image,strcat('marble',file.name));
end
